<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <style name="MTBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/primary_material_dark</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>
    </style>
    <style name="MTTheme" parent="MTBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- default background color (#fffafafa) is too light, using old default background color (#ffeeeeee) -->
        <item name="android:colorBackground">@color/platform_background_material_light_old</item>
        <item name="android:windowBackground">@color/platform_background_material_light_old</item>
    </style>
    <style name="MTTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
    </style>
</resources>